/* pages/time-line/time-line.wxss */
.page-bottom{
  height: 50%;
  width: 750rpx;
  background: #cd9256;
  position: absolute;
  z-index: 0;
}
.page-content{
  position: relative;
  padding-top: 20rpx;
}
.page-content .content-body{
    margin-top: 0rpx;
}

/* 修改weui中部分样式 */
.weui-cells:before{
  top:0;
  border-top:0rpx solid #d9d9d9
}
.weui-cells:after{
  bottom:0;
  border-bottom:0rpx solid #d9d9d9
}
.weui-cells{
  background: #cd9256
}
.weui-cell{
  padding: 6px 15px;
  align-items:flex-start;
}
.weui-cell__bd{
  -webkit-box-flex:0.25;
  -webkit-flex:0.25;
  flex: 0.25;
  color: #ffd9ad;
}
.weui-cell__ft{
  position: absolute;
  left: 194rpx;
  text-align: left;
  color: white;
}

.page-img{
  position: absolute;
  right: 40rpx;
  top: 20rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}



.page-top{
  height: 100%;
  width: 750rpx;
  position: absolute;
  background: white;
  z-index: 0;
  transition: all 0.4s ease;
}
.c-stare1{
    position: fixed;
   transform: rotate(0deg) scale(1) translate(0%,38%);
}





